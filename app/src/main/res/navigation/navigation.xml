<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/landingPage">

    <fragment
        android:id="@+id/landingPage"
        android:name="com.example.feelslike.view.LandingPageFragment"
        android:label="LandingPageFragment"
        tools:layout="@layout/landing_page">
        <action
            android:id="@+id/action_landingPage_to_activityInitialUserInput"
            app:destination="@+id/activity_initial_user_input"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"/>
        <action
            android:id="@+id/action_landingPage_to_settingsFragment"
            app:destination="@+id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.feelslike.view.SettingsFragment"
        android:label="SettingsFragment">
    </fragment>

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.feelslike.view.MapsFragment"
        android:label="MapsFragment"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="currentSelection"
            app:argType="com.example.feelslike.model.entity.FeelsLikeEntity" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.feelslike.view.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
    </fragment>

</navigation>
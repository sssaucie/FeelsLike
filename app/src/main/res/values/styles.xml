<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Text Styles-->

    <style name="fontStyleNormal">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="errorHeaderMainButtonStyleText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_calculate_button_error_text</item>
    </style>

    <style name="normalButtonText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_normal_button</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="mainItemText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_main_item</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="menuHeaderText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_menu_header</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="smallButtonText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_small_button</item>
    </style>

    <style name="resultsListAndFavoritesHeaderText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_results_list_favorites_header</item>
    </style>

    <style name="subtextText" parent="fontStyleNormal">
        <item name="android:textSize">@dimen/font_size_subtext</item>
    </style>

<!--    TextBox style-->
    <style name="DenseBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/BoxOverlayCustom</item>
    </style>

    <style name="BoxOverlayCustom">
        <item name="editTextStyle">@style/TextInputEditTextBox</item>
    </style>

    <style name="TextInputEditTextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:paddingTop">@dimen/spacing_none</item>
        <item name="android:paddingBottom">@dimen/spacing_none</item>
    </style>

<!--    Rounded Corners card style-->
    <style name="RoundCornersImageShapeStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
        <item name="android:backgroundTint">@color/clear</item>
    </style>
</resources>